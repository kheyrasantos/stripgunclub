.tpb-booking-form.page {
  display: none;
  width: 100%;
  margin: 0 !important;
  max-width: none;
  box-shadow: 7px 12px 50px 0px rgba(190, 190, 190, 0.54);
  border-color: #e3e3e3;

  .step1 {

    // Title
    .inner-step {
      &>h5 {
        display: none !important;
      }
    }

    // Service 
    .tpb-form-control.product {
      display: none !important;
    }

    // Creating Selects
    
    .tpb-label-option1 {
      cursor: auto;
      font-size: 21px;
      text-transform: uppercase;
      margin-left: 5px;
      margin-bottom: 20px;
      font-weight: bold;
    }

    div.tpb-select-option-1 {
      
      .ss-single-selected {
        display: none !important;
      }

      .ss-option-content {
        display: none;
        margin-top: 15px;

        .ss-option-description {
          .content {
            width: 100%;
          }
        }

        .title {
          color: #ed2027;
          font-weight: bold;
          margin-bottom: 5px;
        }

        h3 {
          color: #000;
          font-size: 17px;
          margin: 15px 0 0;
        }

        .ss-option-participants,
        .ss-option-guns {
          display: flex;
          margin-top: 15px;
        }

        .left-side {
          width: 100px;
        }

        .right-side {
          display: flex;
          flex-direction: column;
        }

        input {
          height: 100%;
          width: 100%;
          border-radius: 0;
          outline: none;
          border: 2px solid #ed2027;
        }

        button {
          background: #ed2027;
          color: #fff;
          padding: 0 5px;
          border-radius: 0;
          outline: none;

          &:active {
            background: #c45252;
          }
        }
      }

      .ss-content {
        border: none;
        position: static;
        transform: scale(1);
        opacity: 1;
      }

      .ss-list {
        max-height: none;
        display: flex;
        flex-wrap: wrap;

        .ss-option {
          width: 31%;
          background: #fff;
          margin: 1%;
          overflow: visible;
          border: 2px solid #ed2027;
          display: flex;
          align-items: center;
          color: #000;
          white-space: normal;
          line-height: 1;
          height: 49px;
          padding: 5px;
          justify-content: center;
          text-align: center;
          transition: width 1s, border-radius 1s;
          will-change: width, border-radius, margin;

          &.animate-selected {
            width: 100%;
            margin: auto;
            border-radius: 5px;
          }

          &:first-child {
            display: none !important;
          }

          &:hover,
          &.ss-option-selected {
            background: #ed2027;
            color: #fff;
          }
        }


      }


    }

    .back-button {
      margin-top: 10px;
    }

  }

  .step2 {
    
    .tpb-timepicker {
      max-height: none;
      overflow: visible;

      label {
        font-weight: bold;
      }
    }

    .timezone-note {
      display: none !important;
    }

  }

  // background
  .tpb-box .content .step1 {
    min-height: 480px;
    background-image: url("{{ 'booking-bg.jpg' | asset_url }}");
    background-size: cover;
    background-position: top;
  }

  // timepicker
  .tpb-timepicker {
    .radiobtn {
      label {
        color: #000;
        background: #fff;
        border: 3px solid #8e1317;
      }

      input[type="radio"]:checked + label,
      &:hover label {
        color: #fff;
        background: #8e1317;
      }
    }

  }

  // price 
  .tpb-text-price {
    font-family: "Menlo Regular","HelveticaNeue","Helvetica Neue",Helvetica,Arial,sans-serif;
    font-weight: bold;
  }

  .subtotal {
    background: #f3f3f3;

    .value {
      font-family: "Menlo Regular","HelveticaNeue","Helvetica Neue",Helvetica,Arial,sans-serif;
      font-weight: bold;
    }
  }

  .back-button {
    background: #000;
    color: #fff;
  }

  // remove with js
  .employee,
  .copyright {
    display: none !important;
  }

  @media (max-width: 991px) {
    .step1 {
      div.tpb-select-option-1 {
        .ss-list {
          .ss-option {
            width: 48%;
          }
        }
      }
    }
  }
  @media (max-width: 640px) {
    .step1 {
      .tpb-form-control.price {
        text-align: center;
      }
    }
  }
}


