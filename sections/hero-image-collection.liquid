<!-- /sections/hero-image-collection.liquid -->
{% if section.settings.image != blank %}
  <style>
    .background-image-container {
        background-image: url('{{ section.settings.image| img_url: '1024x1024' | format: 'jpg' }}');
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    @media screen and (max-width: 1024px) and (max-height: 768px)  {
      .background-image-container {
        background-image: url('{{ section.settings.image | img_url: '1024x1024' | format: 'jpg' }}');
        background-position: center;
        background-repeat: no-repeat;
      }
    }
    @media screen and (min-width: 1025px), screen and (min-height: 769px) {
      .background-image-container {
        background-image: url('{{ section.settings.image | img_url: '2048x2048' | format: 'jpg' }}');
        background-position: center;
        background-repeat: no-repeat;
      }
    }
  </style>
{% endif %}

{% if section.settings.image != blank %}
<div data-section-id="{{ section.id }}" data-section-type="colletion-hero-section" id="collection-hero-section">
    <div class="background-image-container text-center">
        <div class="wrapper">
            <div class="grid">
                <div class="grid__item one-whole">
                    <h1 class="white">{{ collection.title }}</h1>
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}

{% schema %}
  {
    "name": "Collection Title Hero",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ]
  }
{% endschema %}
