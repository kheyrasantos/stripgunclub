<!-- /sections/about-hero.liquid -->
{% if section.settings.image != blank %}
  <style>
  .apply-hero {
      position: absolute;
      bottom: 40px;
      right: 40px;
      padding: 10px 60px;
      font-size: 18px;
  }

    .background-image-container {
        background-image: url('{{ section.settings.image| img_url: '1024x1024' | format: 'jpg' }}');
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    .background-image-container h1 {
        position: absolute;
        top: 40%;
        left: 0;
        right: 0;
        margin-left: auto;
        margin-right: auto;
    }

    .shopify-section {
        padding-top: 0;
    }

    .template-page .main-content {
        padding-top: 0;
    }

    @media (max-width: 500px) {
        .apply-hero {
            right: 0;
            left: 50%;
            transform: translate(-50%);
            bottom: 20px;
            font-size: 16px;
        }

        .background-image-container h1 {
            font-size: 40px !important;
            top: 10% !important;
        }
    }

    @media screen and (max-width: 1024px) and (max-height: 768px)  {

      .background-image-container {
        background-image: url('{{ section.settings.image | img_url: '1024x1024' | format: 'jpg' }}');
        background-position: center;
        background-repeat: no-repeat;
      }

    }
    @media screen and (min-width: 1025px), screen and (min-height: 769px) {

      .background-image-container {
        background-image: url('{{ section.settings.image | img_url: '2048x2048' | format: 'jpg' }}');
        background-position: center;
        background-repeat: no-repeat;
      }

      .background-image-container h1 {
          font-size: 50px;
      }

    }
  </style>
{% endif %}

{% if section.settings.image != blank %}
<div data-section-id="{{ section.id }}" data-section-type="wholesale-hero-section">
    <div class="background-image-container text-center position-relative">
        <div class="wrapper">
            <div class="grid">
                <div class="grid__item one-whole">
                    {% if section.settings.title != blank %}
                    <h1 class="white">{{ section.settings.title }}</h1>
                    {% endif %}

                    {% if section.settings.show_button != blank %}
                    <a href="#wholesaleForm" class="btn apply-hero" onclick="$('html,body').animate({scrollTop: $('a.wholesaleForm').offset().top},'slow'); return 0;" style="background-color: {{ section.settings.button_bgcolor }}; color: {{ section.settings.button_color }}">
                        {{ section.settings.button_text }}
                    </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}

{% schema %}
  {
    "name": "Wholesale Hero",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Hero Title"
      },
      {
        "type": "checkbox",
        "id": "show_button",
        "label": "Show Hero Button"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "APPLY"
      },
      {
        "type": "color",
        "id": "button_bgcolor",
        "label": "Button Background Color",
        "default": "#0016ab"
      },
      {
        "type": "color",
        "id": "button_color",
        "label": "Button Text Color",
        "default": "#ffffff"
      }
    ]
  }
{% endschema %}
