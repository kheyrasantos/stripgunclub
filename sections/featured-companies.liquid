<!-- section/featured-companies.liquid -->
<div class="wrapper">
    <style>
    .featured-companies-title {
        text-align: center;
        width: 100%;
        margin: 30px 0px 45px 0px;
    }
    .image-section {
        text-align: center;
        width: 100%;
    }
    .image {
        display: inline-block;
        height: 135px;
        width: auto;
        margin: 0px 16px;
    }
    </style>
    {% assign imageSize = '300x' %}
    <h2 class="section-header__title text-uppercase featured-companies-title">{{ section.settings.title | escape }}</h2>
    <div class="image-section">
        {% if section.settings.image-1 %}
        <img class="image" src="{{ section.settings.image-1 | img_url: imageSize }}">
        {% endif %}
        {% if section.settings.image-2 %}
