<!-- /sections/about-hero.liquid -->
{% if section.settings.image != blank %}
  <style>
    .background-image-container {
        background-image: url('{{ section.settings.image| img_url: '1024x1024' | format: 'jpg' }}');
        background-position: top;
        background-repeat: no-repeat;
        background-size: cover;
    }

    .background-image-container h1 {
        position: absolute;
        top: 40%;
        left: 0;
        right: 0;
        margin-left: auto;
        margin-right: auto;
    }

    .shopify-section {
        padding-top: 0;
    }

    .template-page .main-content {
        padding-top: 0;
    }

    @media screen and (max-width: 1024px) and (max-height: 768px)  {

      .background-image-container {
        background-image: url('{{ section.settings.image | img_url: '1024x1024' | format: 'jpg' }}');
        background-position: top;
        background-repeat: no-repeat;
      }

    }
    @media screen and (min-width: 1025px), screen and (min-height: 769px) {

      .background-image-container {
        background-image: url('{{ section.settings.image | img_url: '2048x2048' | format: 'jpg' }}');
        background-position: top;
        background-repeat: no-repeat;
      }

      .background-image-container h1 {
          font-size: 50px;
      }

    }
  </style>
{% endif %}

{% if section.settings.image != blank %}
<div data-section-id="{{ section.id }}" data-section-type="mission-hero-section" id="mission-hero-section">
    <div class="background-image-container text-center position-relative">
        <div class="wrapper">
            <div class="grid">
                <div class="grid__item one-whole">
                    <h1 class="white">{{ section.settings.title }}</h1>
                </div>
            </div>
        </div>
    </div>
</div>
{% endif %}

{% schema %}
  {
    "name": "Mission Page Hero",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
    },
    {
        "type": "text",
        "id": "title",
        "label": "Hero Title"
    }
    ]
  }
{% endschema %}
