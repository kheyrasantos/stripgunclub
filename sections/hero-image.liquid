<!-- /sections/hero-image.liquid -->
{% if section.settings.image != blank %}
  <style>
    .hero-image-2.background-image-container {
        background-image: url('{{ section.settings.image| img_url: '1024x1024' | format: 'jpg' }}');
        background-position: center;
        background-repeat: no-repeat;
        background-size: contain;
        position: relative;
        bottom: -35px;
    }

    .background-image-container-container .white {
        text-shadow: 0 0 15px #222;
    }

    @media screen and (max-width: 1024px) and (max-height: 768px)  {
      .hero-image-2.background-image-container {
        background-image: url('{{ section.settings.image | img_url: '1024x1024' | format: 'jpg' }}');
        background-position: center;
        background-repeat: no-repeat;
        background-size: contain;
      }
    }
    @media screen and (min-width: 1025px), screen and (min-height: 769px) {
      .hero-image-2.background-image-container {
        background-image: url('{{ section.settings.image | img_url: '2048x2048' | format: 'jpg' }}');
        background-position: center;
        background-repeat: no-repeat;
        background-size: contain;
      }
    }
  </style>
{% endif %}

<div class="background-image-container-container">
    {% if section.settings.image_url != blank %}
    <a href="{{ section.settings.image_url }}">
    {% endif %}
    <div class="hero-image-2 background-image-container text-center">
        <div class="wrapper">
            <div class="grid">
                <div class="grid__item one-whole">
                    <div class="text-container">
                        {% if section.settings.subheading != blank %}
                        <h1 class="white h3 text-uppercase subheading">{{ section.settings.subheading }}</h1>
                        {% endif %}
                        {% if section.settings.title != blank %}
                        <h2 class="white bolder h1 title">{{ section.settings.title }}</h2>
                        {% endif %}
                        {% if section.settings.text != blank %}
                        <p class="white">{{ section.settings.text }}</p>
                        {% endif %}
                        {% if section.settings.url != blank %}
                        <a href="{{ section.settings.url }}" class="learn-more-button text-uppercase">{{ section.settings.button_text }}</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% if section.settings.image_url != blank %}
    </a>
    {% endif %}
</div>

{% schema %}
  {
    "name": "Hero Image with Title",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Title"
       },
      {
        "type": "text",
        "id": "title",
        "label": "Product Callout Header",
        "default": "Product Callout Header"
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Paragraph Text",
        "default": "Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit."
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "SHOP NOW"
      },
      {
        "type": "url",
        "id": "url",
        "label": "Button URL"
      },
      {
        "type": "url",
        "id": "image_url",
        "label": "If no button, make whole container a link"
      }
    ],
    "presets": [{
      "name": "Hero Image",
      "category": "Image"
    }]
  }
{% endschema %}
